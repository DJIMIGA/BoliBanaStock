{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "echo 'Building Python Django application' && pip install -r requirements.txt && python manage.py collectstatic --noinput"
  },
  "deploy": {
    "startCommand": "gunicorn bolibanastock.wsgi:application --bind 0.0.0.0:$PORT --workers 3 --timeout 120",
    "healthcheckPath": "/health/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "PYTHON_VERSION": "3.11",
    "DJANGO_SETTINGS_MODULE": "bolibanastock.settings_railway",
    "RAILWAY_ENVIRONMENT": "production",
    "NIXPACKS_NODE_VERSION": "",
    "NIXPACKS_PYTHON_VERSION": "3.11"
  }
}
